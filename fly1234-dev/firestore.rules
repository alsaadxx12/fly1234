rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read for specific settings documents for app configuration
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /notification_settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /account_settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /system_settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /exchange_rates/{rateId} {
      allow read: if true; // covers get and list
      allow write: if request.auth != null;
    }

    // Allow public read for a single voucher for sharing links. List is protected.
    match /vouchers/{voucherId} {
      allow get: if true;
      allow list, create, update, delete: if request.auth != null;
    }
    
    // All other documents require authentication.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
